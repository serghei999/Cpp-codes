#include <algorithm>
#include <iostream>
 
using namespace std;
 
void show(int a[], int array_size)
{
    for (int i = 0; i < array_size; ++i)
        cout << a[i] << " ";
}
 
// Driver code
int main()
{
    int a[] = { 10, 55, 18, 9, 16, 57, 31, 65, 44, 11 };
   
    // size of the array
    int asize = sizeof(a) / sizeof(a[0]);
    cout << "La liste avant le tri est : \n";
   
    // print the array
    show(a, asize);
 
      // sort the array
    sort(a, a + asize);
 
    cout << "\n\nLa liste aprÃ¨s le tri est :\n";
   
    // print the array after sorting
    show(a, asize);
 
    return 0;
}
